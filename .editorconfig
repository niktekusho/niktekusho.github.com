# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,js,css,md}]
indent_style = tab

[*.{yaml,yml}]
indent_style = space

[*.{html,css}]
indent_size = 2

[*.js]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
